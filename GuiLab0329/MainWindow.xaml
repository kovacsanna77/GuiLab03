<Window x:Class="GuiLab0329.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiLab0329"
        xmlns:vm="clr-namespace:GuiLab0329.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding leftList}" SelectedItem="{Binding SelectedFromLeft}" Grid.Column="0" Grid.Row="1" HorizontalContentAlignment="Left" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="{Binding Name}" Grid.Column="0"/>
                    <Label Content="{Binding Type}" Grid.Column="1"/>
                    <Label Content="{Binding Cost}" Grid.Column="2" HorizontalContentAlignment="Right"/>
                  </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <ListBox ItemsSource="{Binding rightList}" SelectedItem="{Binding SelectedFromRight}" Grid.Column="2" Grid.RowSpan="2" Grid.Row="1" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding Name}" Grid.Column="0"/>
                        <Label Content="{Binding Type}" Grid.Column="1"/>
                        <Label Content="{Binding Cost}" Grid.Column="2"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
           

        </ListBox>
        <ComboBox Width="200" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Margin="10" Padding="10"/>
        <CheckBox Content="Filter"  Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Width="98" Margin="5,0,5,0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button Grid.Column="1" Content="Add" Command="{Binding AddToRight}" HorizontalAlignment="Center" Margin="0,5,0,5" Grid.Row="1" Width="100" VerticalAlignment="Top"/>
            <Button Grid.Column="1" Content="Remove" Command="{Binding RemoveFromRight}" HorizontalAlignment="Center" Margin="0,30,0,0" Grid.Row="1" Width="100" VerticalAlignment="Top"/>
            <Label Content="{Binding AllCost}" Grid.Column="1" Grid.Row="1" Margin="10" ContentStringFormat="Cost {0}$" HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>

